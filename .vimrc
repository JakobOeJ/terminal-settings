syntax on
set number
colorscheme desert
set ruler
set cursorline
" set ttyfast
set titlestring=%f title
set rulerformat=L:\ %l/%L\ C:\ %c ruler
set scrolloff=8
set hlsearch
set ignorecase
set enc=utf-8

filetype plugin on
au BufNewFile,BufRead *.ejs set filetype=html

no J 20j
no K 20k

colorscheme Monokai

